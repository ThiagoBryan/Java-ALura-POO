
public class TestaPontoFlutuante {
	
	public static void main(String[] args) {
			
		double salario = 1250.70;      // %.2f , para arredondar casa decimais;
		System.out.printf("Meu salário é: R$ %.2f" , salario);

		double idade = 29;
		
		double divisao = 3.14 / 2;
		System.out.println("\nDivisão: " + divisao);
		
		Integer outraDivisao = 5 / 2;
		System.out.println("outraDivisao: " + outraDivisao);
		

		double novaTentaiva = 5.0 / 2;
		System.out.println("novaTentativa: " + novaTentaiva);
		
		
	}
}
